<UserControl
  x:Class="CTKS_Chart.Views.Controls.Chart"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:VCore.WPF.Controls;assembly=VCore.WPF"
  xmlns:converters="clr-namespace:VCore.WPF.Converters;assembly=VCore.WPF"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border>
    <Grid>
      <Grid MouseWheel="Border_MouseWheel" >
        <Image
          x:Name="Image"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Source="{Binding Chart}" />
      </Grid>
    </Grid>
  </Border>
</UserControl>
