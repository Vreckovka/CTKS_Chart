<Window x:Class="CTKS_Chart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:liveChart="clr-namespace:LiveChart;assembly=LiveChart"
        xmlns:local="clr-namespace:CTKS_Chart"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1200"
        Height="850"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="Canvas">
                <Setter Property="Background" Value="black" />
                <Setter Property="ClipToBounds" Value="True" />
            </Style>
        </Grid.Resources>

        <Border Background="Gray">
            <Grid>
                <ItemsControl ItemsSource="{Binding CtksTimeFrames}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Margin="10,0,10,0"
                                        Command="{Binding DataContext.ShowLines, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    Show lines
                                </Button>
                                <Button Margin="10,0,10,0"
                                        Command="{Binding DataContext.ShowIntersections, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    Show intersections
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <UniformGrid x:Name="canvas_grid"
                     Grid.Column="1"
                     Columns="1" />

        <!--<Canvas x:Name="main_canvas"
                Grid.Column="1"
                Background="Black"
                Loaded="main_canvas_Loaded"
                MouseMove="Canvas_MouseMove"
                SizeChanged="main_canvas_SizeChanged">
            <TextBlock x:Name="coordinates"
                       Panel.ZIndex="100"
                       Foreground="White"
                       Text="Ahoj" />
        </Canvas>-->
    </Grid>
</Window>
