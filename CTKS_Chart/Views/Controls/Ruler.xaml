<UserControl
  x:Class="CTKS_Chart.Views.Controls.Ruler"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border
    Background="#08ffffff"
    MouseMove="Grid_MouseMove"
    MouseWheel="Border_MouseWheel">
    <Grid>
      <Canvas x:Name="Overlay" ClipToBounds="False" />
    </Grid>


    <Border.Style>
      <Style TargetType="Border">
        <Setter Property="Cursor" Value="SizeWE" />

        <Style.Triggers>
          <DataTrigger Binding="{Binding Mode, RelativeSource={RelativeSource AncestorType=local:Ruler}}" Value="{x:Static local:RulerMode.Vertical}">
            <Setter Property="Cursor" Value="SizeNS" />
          </DataTrigger>
        </Style.Triggers>
      </Style>
    </Border.Style>
  </Border>
</UserControl>
