<UserControl
  x:Class="CTKS_Chart.Views.Controls.Ruler"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border>
    <Grid
      Background="#250000"
      MouseMove="Grid_MouseMove"
      MouseWheel="Border_MouseWheel">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0" Text="{Binding MaxValue}" />
      <TextBlock Grid.Row="2" Text="{Binding MinValue}" />
    </Grid>
  </Border>
</UserControl>
