<UserControl
  x:Class="TradingManager.Views.ScreenerView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TradingManager.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>

    <ListView ItemsSource="{Binding Symbols.ViewModels}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Margin="5">
            <TextBlock
              FontSize="15"
              FontWeight="Bold"
              Foreground="White"
              Text="{Binding Symbol}" />

            <TextBlock
              DataContext="{Binding Model}"
              FontSize="12"
              Foreground="#25ffffff">
              <Run Text="{Binding QuoteAssetPrecision}" />
              <Run Text="{Binding BaseFeePrecision}" />
              <Run Text="{Binding QuoteAssetPrecision}" />
            </TextBlock>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </Grid>
</UserControl>
