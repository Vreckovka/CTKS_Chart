<UserControl
  x:Class="CTKS_Chart.Views.Controls.Chart"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border>
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:Chart}}" MouseWheel="Border_MouseWheel">
      <ContentControl Content="{Binding ChartContent}" />

      <Grid>
        <TextBlock
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Foreground="White">
          <Run DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:Chart}}" Text="{Binding ActualMousePositionY}" />
          <Run DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:Chart}}" Text="{Binding ActualMousePositionX}" />
        </TextBlock>
      </Grid>
    </Grid>

  </Border>
</UserControl>
