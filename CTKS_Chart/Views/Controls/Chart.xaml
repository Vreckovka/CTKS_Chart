<UserControl
  x:Class="CTKS_Chart.Views.Controls.Chart"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:VCore.WPF.Controls;assembly=VCore.WPF"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border>
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:Chart}}">
      <Grid MouseWheel="Border_MouseWheel">
        <ContentControl Content="{Binding ChartContent}" />
        <ContentControl Content="{Binding Overlay}" />
      </Grid>


    </Grid>
  </Border>
</UserControl>
