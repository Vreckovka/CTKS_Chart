<UserControl
  x:Class="CTKS_Chart.Views.Statistics"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
  Height="750"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <UniformGrid MinWidth="850" Columns="2">
    <wpf:CartesianChart Background="Transparent" LegendLocation="None">

      <wpf:CartesianChart.AxisY>
        <wpf:Axis
          Title="Total Value"
          Foreground="{StaticResource YellowBrush3}"
          LabelFormatter="{Binding ValueFormatter}">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource YellowBrush3}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>

        <wpf:Axis
          Title="Total Profit"
          Foreground="{StaticResource GreenBrush2}"
          LabelFormatter="{Binding ValueFormatter}"
          Position="RightTop">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource GreenBrush2}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>

      </wpf:CartesianChart.AxisY>

      <wpf:CartesianChart.AxisX>
        <wpf:Axis Title="Time" Labels="{Binding Labels}">
          <wpf:Axis.Separator>
            <wpf:Separator Stroke="#252525" StrokeThickness="1" />
          </wpf:Axis.Separator>

        </wpf:Axis>
      </wpf:CartesianChart.AxisX>
      <wpf:CartesianChart.DataTooltip>
        <wpf:DefaultTooltip
          Background="#252525"
          BorderBrush="#35ffffff"
          BorderThickness="1" />
      </wpf:CartesianChart.DataTooltip>

      <wpf:CartesianChart.Series>
        <wpf:LineSeries
          Title="Total Value"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource YellowBrush3}"
          PointGeometrySize="0"
          ScalesYAt="0"
          Stroke="{StaticResource YellowBrush3}"
          Values="{Binding TotalValue}" />


      </wpf:CartesianChart.Series>
    </wpf:CartesianChart>

    <wpf:CartesianChart
      Grid.Row="1"
      Margin="0,20,0,0"
      Background="Transparent"
      LegendLocation="None">

      <wpf:CartesianChart.AxisY>
        <wpf:Axis
          Title="Price"
          LabelFormatter="{Binding PriceFormatter}"
          Position="RightTop">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource YellowBrush3}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>

      </wpf:CartesianChart.AxisY>

      <wpf:CartesianChart.AxisX>
        <wpf:Axis Title="Time" Labels="{Binding Labels2}">
          <wpf:Axis.Separator>
            <wpf:Separator Stroke="#252525" StrokeThickness="1" />
          </wpf:Axis.Separator>

        </wpf:Axis>
      </wpf:CartesianChart.AxisX>

      <wpf:CartesianChart.DataTooltip>
        <wpf:DefaultTooltip
          Background="#252525"
          BorderBrush="#35ffffff"
          BorderThickness="1" />
      </wpf:CartesianChart.DataTooltip>

      <wpf:CartesianChart.Series>
        <wpf:LineSeries
          Title="Ath Price"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource YellowBrush3}"
          PointGeometrySize="0"
          ScalesYAt="0"
          Stroke="{StaticResource YellowBrush3}"
          Values="{Binding AthPrice}" />

        <wpf:LineSeries
          Title="Close Price"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource LightRedBrush}"
          PointGeometrySize="0"
          ScalesYAt="0"
          Stroke="{StaticResource LightRedBrush}"
          Values="{Binding ClosePice}" />

      </wpf:CartesianChart.Series>
    </wpf:CartesianChart>

    <wpf:CartesianChart
      Grid.Row="2"
      Margin="0,20,0,0"
      Background="Transparent"
      LegendLocation="None">

      <wpf:CartesianChart.AxisY>
        <wpf:Axis Title="Value to Native" LabelFormatter="{Binding NativeFormatter}">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource MagentaBrush}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>

        <wpf:Axis
          Title="Value to BTC"
          LabelFormatter="{Binding BTCFormatter}"
          Position="RightTop">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource OrangeBrush}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>


      </wpf:CartesianChart.AxisY>

      <wpf:CartesianChart.DataTooltip>
        <wpf:DefaultTooltip
          Background="#252525"
          BorderBrush="#35ffffff"
          BorderThickness="1" />
      </wpf:CartesianChart.DataTooltip>

      <wpf:CartesianChart.Series>
        <wpf:LineSeries
          Title="Value To Native"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource MagentaBrush}"
          PointGeometrySize="0"
          ScalesYAt="0"
          Stroke="{StaticResource MagentaBrush}"
          Values="{Binding ValueToNative}" />

        <wpf:LineSeries
          Title="Value To BTC"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource OrangeBrush}"
          PointGeometrySize="0"
          ScalesYAt="1"
          Stroke="{StaticResource OrangeBrush}"
          Values="{Binding ValueToBTC, StringFormat={}{0:N5}}" />

      </wpf:CartesianChart.Series>
    </wpf:CartesianChart>

    <wpf:CartesianChart Background="Transparent" LegendLocation="None">

      <wpf:CartesianChart.AxisY>
        <wpf:Axis
          Title="Profit"
          Foreground="{StaticResource GreenBrush}"
          LabelFormatter="{Binding GreenBrush}">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource GreenBrush}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>

      </wpf:CartesianChart.AxisY>

      <wpf:CartesianChart.AxisX>
        <wpf:Axis Title="Time" Labels="{Binding Labels}">
          <wpf:Axis.Separator>
            <wpf:Separator Stroke="#252525" StrokeThickness="1" />
          </wpf:Axis.Separator>

        </wpf:Axis>
      </wpf:CartesianChart.AxisX>
      <wpf:CartesianChart.DataTooltip>
        <wpf:DefaultTooltip
          Background="#252525"
          BorderBrush="#35ffffff"
          BorderThickness="1" />
      </wpf:CartesianChart.DataTooltip>

      <wpf:CartesianChart.Series>
        <wpf:LineSeries
          Title="Total Profit"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource GreenBrush2}"
          PointGeometrySize="0"
          Stroke="{StaticResource GreenBrush2}"
          Values="{Binding TotalProfit}" />

        <wpf:LineSeries
          Title="Total Manual Profit"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource YellowBrush}"
          PointGeometrySize="0"
          Stroke="{StaticResource YellowBrush}"
          Values="{Binding TotalManualProfit}" />

        <wpf:LineSeries
          Title="Total Auto Profit"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource BlueBrush}"
          PointGeometrySize="0"
          Stroke="{StaticResource BlueBrush}"
          Values="{Binding TotalAutoProfit}" />


      </wpf:CartesianChart.Series>
    </wpf:CartesianChart>

    <wpf:CartesianChart Background="Transparent" LegendLocation="None">

      <wpf:CartesianChart.AxisY>
        <wpf:Axis
          Title="Profit"
          Foreground="{StaticResource GreenBrush}"
          LabelFormatter="{Binding GreenBrush}">
          <wpf:Axis.Separator>
            <wpf:Separator
              Stroke="{StaticResource GreenBrush}"
              StrokeDashArray="0"
              StrokeThickness="0" />
          </wpf:Axis.Separator>
        </wpf:Axis>

      </wpf:CartesianChart.AxisY>

      <wpf:CartesianChart.AxisX>
        <wpf:Axis Title="Time" Labels="{Binding Labels}">
          <wpf:Axis.Separator>
            <wpf:Separator Stroke="#252525" StrokeThickness="1" />
          </wpf:Axis.Separator>

        </wpf:Axis>
      </wpf:CartesianChart.AxisX>
      <wpf:CartesianChart.DataTooltip>
        <wpf:DefaultTooltip
          Background="#252525"
          BorderBrush="#35ffffff"
          BorderThickness="1" />
      </wpf:CartesianChart.DataTooltip>

      <wpf:CartesianChart.Series>
        <wpf:LineSeries
          Title="Actual Value"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource YellowBrush}"
          PointGeometrySize="0"
          Stroke="{StaticResource YellowBrush}"
          Values="{Binding ActualValue}" />

        <wpf:LineSeries
          Title="Actual Auto Value"
          Fill="Transparent"
          LineSmoothness="0"
          PointForeground="{StaticResource BlueBrush}"
          PointGeometrySize="0"
          Stroke="{StaticResource BlueBrush}"
          Values="{Binding ActualAutoValue}" />
      </wpf:CartesianChart.Series>
    </wpf:CartesianChart>

  </UniformGrid>
</UserControl>
