<UserControl
  x:Class="CTKS_Chart.Views.Controls.Chart"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:VCore.WPF.Controls;assembly=VCore.WPF"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CTKS_Chart.Views.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border>
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:Chart}}">
      <Grid MouseWheel="Border_MouseWheel">
        <ContentControl Content="{Binding ChartContent}" />
        <ContentControl Content="{Binding Overlay}" />


      </Grid>

      <Border
        Width="50"
        Margin="0,0,0,0"
        Padding="0,15,0,0"
        HorizontalAlignment="Left"
        Panel.ZIndex="100"
        Background="#45000000">
        <Grid Margin="0,100,0,0">
          <controls:PathButton
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Glyph=""
            GlyphFontSize="25"
            IconCheckedColor="{StaticResource YellowColor}"
            IconHeight="auto"
            IconMargin="0"
            IconWidth="auto"
            IsChecked="{Binding MeasureTool.IsEnabled, Mode=TwoWay}" />
        </Grid>
      </Border>
    </Grid>
  </Border>
</UserControl>
